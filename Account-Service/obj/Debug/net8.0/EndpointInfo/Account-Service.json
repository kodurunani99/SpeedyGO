                "$ref": "#/components/schemas/EmailRequest"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/EmailRequest"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/EmailRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/api/Email/validate-otp": {
      "post": {
        "tags": [
